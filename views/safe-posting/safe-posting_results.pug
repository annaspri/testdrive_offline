extends ../ui_layout

block content
  -var cdn = "https://dhpd030vnpk29.cloudfront.net";
  .ui.container(style="padding-bottom:4em;")
    .ui.stackable.column.grid
      .ui.column
        .insertPrint
        .ui.raised.segment
          h3.ui.header
            i.question.blue.icon
            .content
              | Reflect
          .ui.label(style="background-color:#2185d08a;color:#000000d1;")
            h4(style="float:left")
              i.exclamation.triangle.icon(style="color: #f9ff00 !important;")

              | These were the posts with private information in the timeline. How many did you notice?
          br
          br
          .ui.stackable.three.cards
            
            .ui.fluid.card.dim()#card1
              .content
                .right.floated.meta 20 minutes ago  
                a(href='/user/zoe.g._')
                  img.ui.avatar.image(src=cdn+'/profile_pictures/user70.JPG')
                  span Zoe Goodall
              .img.post
                img.transition.visible(src=cdn+'/post_pictures/safepostga2.jpg', data-src='/safepostga2.jpg', style='max-width: 100%; cursor: pointer;display: inline !important;')
              .content
                .description
                  | new phone who dis? my new number is 607-252-6771

            .ui.fluid.card.dim()#card2
              .content
                .right.floated.meta 30 minutes ago
                a(href='/user/ethan-the-man')
                  img.ui.avatar.image(src=cdn+'/profile_pictures/user18.png')
                  span Ethan Kravitz
              .img.post
                img.transition.visible(src=cdn+'/post_pictures/coolmovies.jpeg', data-src='/coolmovies.jpeg', style='max-width: 100%; cursor: pointer;display: inline !important;')
              .content
                .description
                  | Gonna be at the Regal THIS FRIDAY to see the new Marvel movie!! Meet me there at 8 üé•üçø


            .ui.fluid.card.dim()#card3
              .content
                .right.floated.meta 1 hour ago
                a(href='/user/jasmine_1110')
                  img.ui.avatar.image(src=cdn+'/profile_pictures/user57.jpg')
                  span Jasmine Woolley
              .img.post
                img.transition.visible(src=cdn+'/post_pictures/house.jpg', data-src='/house.jpg', style='max-width: 100%;cursor: pointer;display: inline !important;')
              .content
                .description
                  | 321 Jefferson Ave come hang out guys, I'm bored.

 
 
    .ui.raised.segment.checkOne
      .ui.label(style="background-color:#2185d08a;color:#000000d1;")
        h4(style="float:left")
          | Why is this post inappropriate for social media?
      .ui.stackable.two.cards

        .ui.fluid.card.dim()#card3
            .content
              .right.floated.meta 1 hour ago
              a(href='/user/jasmine_1110')
                img.ui.avatar.image(src=cdn+'/profile_pictures/user57.jpg')
                span Jasmine Woolley
            .img.post
              img.transition.visible(src=cdn+'/post_pictures/house.jpg', data-src='/house.jpg', style='max-width: 100%;cursor: pointer;display: inline !important;')
            .content
              .description
                | 321 Jefferson Ave come hang out guys, I'm bored.

        .ui.fluid.card.dim()
          .content
            .ui.form
              .inline.fields
                label(for='privateInfo', name='privateInfo') 
                .field
                  .ui.checkbox
                    input(type='checkbox')
                    label(for='privateInfo', style="font-size:120%;", tabindex='0')  Private information like street address, phone number, school name, or email address was shared
            hr
            .ui.form
              .inline.fields
                label(for='think', name='think') 
                .field
                  .ui.checkbox
                    input(type='checkbox')
                    label(for='think', style="font-size:120%;", tabindex='0')  The person making the post did not think about all the audiences who could see it
            hr
            .ui.form
              .inline.fields
                label(for='think', name='think') 
                .field
                  .ui.checkbox
                    input(type='checkbox')
                    label(for='think', style="font-size:120%;", tabindex='0')  It was appropriate for social media
            
    .ui.raised.segment.checkTwo
      .ui.label(style="background-color:#2185d08a;color:#000000d1;")
        h4(style="float:left")
          | How did you respond to these messages that asked for private information?
      .ui.stackable.two.cards

        .ui.fluid.card.dim()#card3
          .content
            .chat(style=" bottom: auto;font-size: 12px;right: auto;position: relative;width: auto;float:left;")
              .chat-history(style="height:inherit")
                ul
                  li.clearfix
                    .message-data
                      span.message-data-name 
                        i.dot.circle.icon.online
                        | Jack 
                      span.message-data-time 10:12 AM
                    .message.my-message
                      | hey, I have a question about the homework for tomorrow
                  li
                    .message-data
                      span.message-data-name
                        i.dot.circle.icon.online
                        |  Jack 
                      span.message-data-time 10:12 AM
                    .message.my-message
                      | can you tell me your number so i can call you real quick?                 

        .ui.fluid.card.dim()#card3
          .content
            .ui.form
              .inline.fields
                label(for='changeSub', name='changeSub') 
                .field

                  .ui.checkbox
                    input(type='checkbox')
                    label(for='changeSub', style="font-size:120%;", tabindex='0')  I changed the subject
            hr
            .ui.form
              .inline.fields
                label(for='humor', name='humor') 
                .field

                  .ui.checkbox
                    input(type='checkbox')
                    label(for='humor', style="font-size:120%;", tabindex='0')  I used humor

            hr
            .ui.form
              .inline.fields
                label(for='ignore', name='ignore') 
                .field
                  .ui.checkbox
                    input(type='checkbox')
                    label(for='ignore', style="font-size:120%;", tabindex='0')  I ignored the message
                    
            hr
            .ui.form
              .inline.fields
                label(for='direct', name='direct') 
                .field
                  .ui.checkbox
                    input(type='checkbox')
                    label(for='direct', style="font-size:120%;", tabindex='0')  I was direct
          
            hr
            .ui.form
              .inline.fields
                label(for='somethingElse', name='somethingElse') 
                .field
                  .ui.checkbox
                    input(type='checkbox')
                    label(for='somethingElse', style="font-size:120%;", tabindex='0')  I did something else
    
    .ui.raised.segment.responseOne
      .ui.label(style="background-color:#2185d08a;color:#000000d1;")
        h4(style="float:left")
          | What would you do in the future to protect your private information and other people‚Äôs private information on social media?
      .ui.form
        .inline.fields
          label(style="font-size:120%;")
          textarea.glowing-border(rows='3' id="safe_responseOne")
    br
    .ui.big.green.labeled.icon.button(onclick="onPrint()")
          i.right.arrow.icon
          |   Print your responses
    br
    br
    .ui.big.green.labeled.icon.button.cyberbullying_end
          i.rocket.icon
          |   Continue

      
block scripts
  script().
    function onPrint(){
    
      $(".insertPrint").empty();
      $(".insertPrint").css('display','block');  
      
      $(".checkOne").clone().appendTo(".insertPrint");
      $(".checkTwo").clone().appendTo(".insertPrint");
      $(".checkThree").clone().appendTo(".insertPrint");
    
      $(".insertPrint").append('<div class="breakHere"</div><br>');
      $(".insertPrint").append("<h4>What would you do in the future to protect your private information and other people‚Äôs private information on social media?</h4>");
      var responseOne = document.getElementById("safe_responseOne").value;
      $(".insertPrint").append(responseOne);
      
      window.print();  
      
      $(".insertPrint").css('display','none');     
    }
    setTimeout(function(){
      $('.ui.label').transition('bounce');        
    }, 1000);


    setTimeout(function(){
      $('#card1,#card2,#card3').transition({
      animation : 'jiggle',
      duration  : 800,
      interval  : 200
      });    
    }, 2000);
