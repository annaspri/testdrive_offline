extends ../ui_layout

block content
  
  .ui.text.container(style="padding-bottom:4em;")

block scripts
  script().
    $(window).on("load", function() {startIntro()});
    function startIntro(){
        var intro = introJs().setOptions({ 'hidePrev': true, 'hideNext': true, 'exitOnOverlayClick': false, 'showStepNumbers':false, 'showBullets':false, 'scrollToElement':false, 'doneLabel':'Done &#10003', 'tooltipClass':'blueTooltip' });
          intro.setOptions({
            steps: [
              { 
                intro: "Now you get to explore the TestDrive timeline! You can read what others have posted, respond, or make your own posts."
              },
              {
                intro: "Before you start: <br>Imagine that you don’t know the people on this social media site very well and you haven't met any of them face-to-face."
              },
              {
                intro: "Try to spot and respond to posts where someone shared private information. You can also create a post that's okay to share with a broad audience on social media - one that doesn’t have any private information."
              },
              {
                intro: "Be on the lookout for any direct messages and try responding to them. When you get to the end of the timeline, click “Let's Continue” to move on."
              }
            ]
          });
          intro.start().onexit(function() {
          window.location.href='/modual/safe-posting';
        });          
      };
        
