
extends ../ui_layout
  
block content
  -var cdn = "https://testdrive.sfo2.cdn.digitaloceanspaces.com";
  .computer.only.tablet.only.four.wide.column 
    .ui.card
      .image
        img(src=cdn+"/post_pictures/lilyprofpic.png")
      .content
        a.header= 'Lily Hui'
        .meta="@"+'hui_lily'
        .description="😍🤩😝😁 boynton'20" 
        .description 
          i.marker.icon
          span="Ithaca, NY"

  
  .eight.wide.computer.ten.wide.tablet.sixteen.wide.mobile.column

    .ui.fluid.card.test
      .content(data-hint="All of Lily’s posts have been hidden to strangers. Only her social media friends can see her posts now." data-hintPosition='middle-left')
        .center.aligned.description No posts to show.
      
            
    br

    button.ui.big.labeled.icon.button.privacyresults
        i.rocket.icon
        |   Let's Continue!





block scripts
  script().
     
    function startIntro(){
        var hints;
        var literacy_counter = 0;

        hints = introJs().addHints();
        console.log('hints added')
        hints.onhintclose(function(e) {
         literacy_counter++;
         if(literacy_counter == 1) {$( ".privacyresults" ).addClass("green");}
        });

          
      };

      $(window).on("load", function() {startIntro();});
