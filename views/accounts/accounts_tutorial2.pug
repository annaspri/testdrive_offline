extends ../ui_layout

block content

  -var cdn = "https://dhpd030vnpk29.cloudfront.net";

  .computer.only.tablet.only.four.wide.column

  .eight.wide.computer.ten.wide.tablet.sixteen.wide.mobile.column
    .ui.raised.segment#generalStep
      h2.ui.header Create Your Profile
      
      .ui.form(style="font-size:130%;")
        .field
          label Name
          input(type="text" readonly="")
        .field
          label Bio
          textarea(type="text" rows="3" readonly="")   
        .field
          label Birthday
          input(type="text" readonly="")     
        div#locationStep
          .field
            label Current City
            input(type="text" readonly="") 
          .field
            label Hometown
            input(type="text" readonly="")
          .field
            label School
            input(type="text" readonly="") 
        br
        .field
          label Upload a Profile Picure...
          .ui.icon.button
            i.plus.icon
          
          
block scripts
  script(src="/module_js/accounts/accounts_tutorial2.js")
