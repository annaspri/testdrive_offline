extends ../ui_layout

block content

  -var cdn = "https://dhpd030vnpk29.cloudfront.net";

  .computer.only.tablet.only.four.wide.column

  .eight.wide.computer.ten.wide.tablet.sixteen.wide.mobile.column
    .ui.raised.segment
      h2.ui.header#generalStep Create Your Profile
      
      .ui.form(style="font-size:130%;")
        .field
          label Name
          input(type="text")
        .field
          label Bio
          textarea(type="text" rows="3")   
        .field
          label Birthday
          input(type="text")     
        div#locationStep
          .field
            label Current City
            input(type="text") 
          .field
            label Hometown
            input(type="text")
          .field
            label School
            input(type="text") 
        br

              
    button.ui.big.labeled.icon.button#finishSim(style="margin-bottom:4em;")
        i.rocket.icon
        |   Let's Continue!     
          
block scripts
  script(src="/module_js/accounts/accounts_sim2.js")
