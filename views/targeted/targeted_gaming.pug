extends ../ui_layout

block content

  .ui.equal.width.padded.grid.stackable
    .row
      .column.center.aligned
        h3 Boggle Earth VR
      .column.center.aligned
        p Features
      .column.center.aligned
        p Highlights
      .column.center.aligned
        p Available Now
    .row
      .column.center.aligned
        .ui.fluid.image
          img(src=cdn+ '/post_pictures/Games_Interest_Page_1.png' style="object-fit:cover;height:280px;")
          h1(style="position:absolute; bottom:50%; width:100%; height:auto; color:white;") Your World Awaits
          p(style="position:absolute; bottom:40%; width:100%; height:auto; color:white;") Come experience the wonder of Boggle Earth in virtual reality
